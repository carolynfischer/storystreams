<div class="login_box">

<div class="login-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <legend class="logo" style="border:0;text-align: center;">StoryStreams</legend>
      <br/>
  <div class="form-line"><%= f.label :email, :style=> "color:white; font-family: 'Satisfy', cursive; font-size:24px;"%>
  <%= f.email_field :email, autofocus: true, style: "width:300px;" %></div>

  <div class="form-line"><%= f.label :password, :style=> "color:white;font-family: 'Satisfy', cursive; font-size:24px;" %>
    <%= f.password_field :password, autocomplete: "off", style: "width:300px; background-color:#ccc !important;"  %>
  </div>
  <div class="pull-left">
    <%= f.submit "Log in", :style => "font-family: 'Pacifico', cursive;font-size:20px;"%>
  </div>
<% end %>
</div>
</div>